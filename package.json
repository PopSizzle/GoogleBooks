{
  "name": "client",
  "version": "1.0.0",
  "description": "Search for books and save them",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PopSizzle/GoogleBooks.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "nodemon": "^2.0.2",
    "concurrently": "5.1.0"
  },
  "bugs": {
    "url": "https://github.com/PopSizzle/GoogleBooks/issues"
  },
  "homepage": "https://github.com/PopSizzle/GoogleBooks",
  "dependencies": {
    "app": "^0.1.0",
    "routes": "^2.1.0",
    "axios": "^0.19.2",
    "express": "^4.17.1",
    "mongoose": "^5.9.14",
    "if-env": "^1.0.4"
  }
}
